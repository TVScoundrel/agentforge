{
  "name": "@agentforge/tools",
  "version": "0.15.1",
  "description": "Tool library for TypeScript AI agents: web, data, file, and integration tools (HTTP, scraping, CSV, XML/JSON, Slack, databases).",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agentforge/core": "workspace:*",
    "@slack/web-api": "^7.13.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "fast-xml-parser": "^4.5.0",
    "neo4j-driver": "^6.0.1",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@langchain/langgraph": "^1.1.2",
    "better-sqlite3": "^9.0.0 || ^10.0.0 || ^11.0.0 || ^12.0.0",
    "mysql2": "^3.0.0",
    "pg": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@langchain/langgraph": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@langchain/langgraph": "^1.1.2",
    "@testcontainers/mysql": "^11.12.0",
    "@testcontainers/postgresql": "^11.12.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@vitest/ui": "^2.1.8",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9.17.0",
    "mysql2": "^3.17.2",
    "pg": "^8.18.0",
    "prettier": "^3.4.2",
    "testcontainers": "^11.12.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "agent-tools",
    "llm-tools",
    "ai-tools",
    "typescript",
    "nodejs",
    "web-tools",
    "data-tools",
    "file-tools",
    "http-client",
    "scraper",
    "parser",
    "csv",
    "json",
    "xml",
    "slack"
  ],
  "author": "Tom Van Schoor",
  "license": "MIT",
  "homepage": "https://tvscoundrel.github.io/agentforge/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TVScoundrel/agentforge.git",
    "directory": "packages/tools"
  },
  "bugs": {
    "url": "https://github.com/TVScoundrel/agentforge/issues"
  }
}
